@import 'nib'
@import 'mixins'

body
  section

    article
      .container
        padding 10px 15px
      a
        color #cc0000
        fw bold
        &.link-alt
          color #0069ff

      table.actions
        mt 30px
        width 100%
        tr
          width 100%
          td
            width 50%
            &.left
              pr 5px
            &.right
              pl 5px



    #article-home
      .container.top
        mt 15px
        height 200px
        image '/img/crayons.jpg' 100% auto
        background-repeat no-repeat
      .tinker
        font-family "Open Sans"
        padding 15px 0 0 45px
        fs 3.1em
        sup
          fs .3em
          letter-spacing .2em
          pl 5px
      .welcome
        h1
          fs 28px
          padding 20px 0 20px 0
          fw bold
        p
          font-size 18px
          line-height 28px
          fw bold
          color #989898
        .actions
          p
            fs 1.1em
            text-align center
            color #292929

  label.large
    fs 1.2em

  .top-search-holder
    padding 5px 8px 0 8px
    #school-search
      fs 1.7em
      fw bold
      border solid 2px

